<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D1D1D1"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="明日 11-13"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_small"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_data"
        android:background="@drawable/c1" />


    <TextView
        android:id="@+id/tv_smoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_small"
        android:text="天气"
        android:textColor="#F7E8E8"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_smwind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_smoc"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/iv_small"
        android:layout_toRightOf="@+id/iv_small"
        android:text="风向"
        android:textColor="#B7B2B2"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_smmaxoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_smoc"
        android:text="MAX"
        android:textColor="#92C2FF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_smminoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_smmaxoc"
        android:text="MIN"
        android:textColor="#92C2FF"
        android:textSize="14sp" />
</RelativeLayout>


